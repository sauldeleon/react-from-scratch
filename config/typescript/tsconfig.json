{
  "compilerOptions": {
    "baseUrl": "../..",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowJs": false,
    "moduleResolution": "node",
    "strict": true,
    "lib": ["esnext", "dom"],
    "typeRoots": ["../../node_modules/@types", "../../src/types"],
    "esModuleInterop": true
  },
  "include": ["../../src/**/*"]
}
